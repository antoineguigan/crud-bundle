<!DOCTYPE html>
<html>
    <head>
        <title>{{ block("qimnet_crud_title") }}</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
        <script src="{{ asset("bundles/qimnetcrud/js/crud.source.js") }}"></script>
        <script>$(QimnetCRUD.initialize)</script>
    </head>
    <body>
        <h1>{{ block("qimnet_crud_title") }}</h1>
        {% if app.session.flashBag.peekAll()|length %}
            <div class="qimnet-flashes">
                {% for type, messages in app.session.flashBag.all %}
                    {% for message in messages %}
                        <div class="qimnet-flashes-flash qimnet-flashes-flash-{{type}}">
                            <div>{{ message|trans  }}</div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}
        {{ block("qimnet_crud_links") }}
        {{ block("qimnet_crud_content") }}
    </body>
</html>
